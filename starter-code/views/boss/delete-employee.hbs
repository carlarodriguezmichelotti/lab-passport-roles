<div class="container">

  <div class="row">
    <div class="col-md-6">
      <h2>List of celebrities</h2>
    </div>
    <div class="col-md-6">
      <ul class="celebrities-list">
        <h3>Empleados registrados actualmente:</h3>
        {{#each users}}
        <li>Username: {{username}}
            <form action="/boss/delete/{{_id}}" method="post">  
            <button type="submit" class="btn btn-dark">Delete</button>
            </form>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>